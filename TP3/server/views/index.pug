extends layout

block content
    .w3-card-4
      h1 SPARQL Interface
      table
        tr
          th
            div
              .w3-container
                .w3-row.w3-section
                  .w3-col(style="width:100%")
                    select.w3-select.w3-border(name="repository" id='repository')
                      each repository in repositories 
                        option(value=repository)= repository
                .w3-row.w3-section
                  .w3-col(style="width:100%")
                    textarea.w3-input.w3-border(required rows='20' type='text' name='query' placeholder='Query' id='query')
                .w3-center.w3-padding.w3-margin-bottom
                  button.w3-btn.w3-grey.w3-padding(id='run') Run
          th
            div
              .w3-container
                .w3-row.w3-section
                  .w3-col(style="width:100%")
                    textarea.w3-input.w3-border(rows='20' type='text' name='result' placeholder='Result' id='results')
                  .w3-center.w3-padding.w3-margin-bottom
                    button.w3-btn.w3-grey.w3-padding(id='clean') Clean 